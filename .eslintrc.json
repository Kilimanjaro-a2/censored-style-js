{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": ["**/public/*.js"],
    "rules": {
        "semi": ["error", "never"],
        "no-undef": "off",
        "quotes": ["error", "double",  {"allowTemplateLiterals": true} ]
    }
}
